@using AmbienteEscolar.Business.BancoDeDados;
@using AmbienteEscolar.Business.Repositorios;
@using AmbienteEscolar.Business.Classes;

@{
    //Layout nulo, por enquanto (mudar para _Layout, assim que estiver pronto)
    Layout = null;
    BancoDados.DBConnect();
    List<Professor> professores = ProfessorRepository.ListarProfessores();
    List<Curso> cursos = CursoRepository.ListarCursos();
    Professor p = new Professor();
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Professores</title>
    <link rel="icon" type="image/x-icon" href="~/avaicon.ico">
    <link href="~/Models/css/layout.css" rel="stylesheet" />
    <link href="~/Models/css/professores.css" rel="stylesheet" />
</head>
<body>
    <div>
        <main>
            <div>
                <form action="~/WebBusiness/ProfessorBusiness/ProfessorInsert.cshtml" method="post">
                    <h2>Cadastro de Professores:</h2>
                    <br />
                    <label>Nome:</label>
                    <input id="nome" type="text" name="nome" value="@p.Nome" placeholder="Nome do aluno" />
                    <br />
                    <label>E-mail:</label>
                    <input id="email" type="email" name="email" value="@p.Email" placeholder="E-mail do aluno" />
                    <br />
                    <label>Selecione o curso:</label>
                    <br />
                    <select id="idCursoId" name="idCursoId">
                        @foreach (Curso curso in cursos)
                        {
                            <option value="@curso.Id">@curso.Descricao</option>
                        }
                    </select>
                    <br />
                    <input id="insert" type="submit" value="Gravar" />
                </form>
                <button id="new" onclick="New()">Novo</button>
                <button id="cancel" onclick="Cancelar()">Cancelar</button>
            </div>
            <div>
                <br />
                <h2>Professores:</h2>
                <br />
                <div class="list-main-div">
                    <div class="list-header">
                        <label>Nome</label>
                        <label>Email</label>
                        <label>Curso</label>
                    </div>
                    <div class="list-table">
                        <table>
                            @foreach (Professor professor in professores)
                            {
                                <tr>
                                    <td>
                                        @professor.Nome
                                    </td>
                                    <td>
                                        @professor.Email
                                    </td>
                                    <td>
                                        @professor.Curso.Descricao
                                    </td>
                                    <td>
                                        @professor.Curso.Turno.Descricao
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>